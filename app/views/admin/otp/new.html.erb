<div class="login-box">
  <div class="card card-outline card-primary">
    <div class="card-header text-center">
      <a href="#" class="h1"><b>Kanji</b>Together</a>
    </div>
    <div class="card-body">
      <p class="login-box-msg">Mã OTP đã được gửi đến email <%= @admin_user.email %></p>

      <% if flash[:alert] %>
        <div class="alert alert-danger"><%= flash[:alert] %></div>
      <% end %>

      <%= form_with url: admin_verify_otp_path(@admin_user), method: :post, local: true do |f| %>
        <div class="input-group mb-3">
          <%= f.text_field :otp_code, class: "form-control", placeholder: "Nhập mã 6 số...", autofocus: true %>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <%= f.submit "Xác thực & Đăng nhập", class: "btn btn-primary btn-block" %>
          </div>
        </div>
      <% end %>

      <p class="mt-3 mb-1">
        <a href="/admin_users/sign_in">Quay lại đăng nhập</a>
      </p>
    </div>
  </div>
</div>